# Database Configuration
# Option 1: Use DATABASE_URL (recommended - contains all connection info)
# For local PostgreSQL on macOS, typically no password is needed:
# DATABASE_URL=postgresql://YOUR_USERNAME@localhost:5432/bruinlm
# 
# If you have a password, include it:
# DATABASE_URL=postgresql://YOUR_USERNAME:YOUR_PASSWORD@localhost:5432/bruinlm
#
# Replace YOUR_USERNAME with your system username (run 'whoami' to find it)
DATABASE_URL=postgresql://YOUR_USERNAME@localhost:5432/bruinlm

# Option 2: Use individual DB variables (alternative - only if DATABASE_URL is not set)
# DB_USER=YOUR_USERNAME
# DB_PASSWORD=your_postgres_password
# DB_HOST=localhost
# DB_PORT=5432
# DB_DATABASE=bruinlm

# Server Configuration
PORT=5001
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Authentication
# Generate a secure random string for JWT_SECRET (e.g., run: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
JWT_SECRET=your_jwt_secret_key_here_change_this_in_production
HTTPS_ENABLED=false

# OpenAI API
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Optional: For bootstrap scripts
# POSTGRES_CONN=postgresql://localhost:5432/postgres
# TARGET_CONN=postgresql://localhost:5432/bruinlm
